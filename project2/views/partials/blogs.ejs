<div class="row">

  <div class="col-md-8">

    <% blogs.reverse().forEach(function(blog) { %>
      <% if (blog.public || (user && blog.author === user.username)) { %>
        <h1>
          <%= blog.shownTitle %>
          <% if (blog.public) { %>
            <small class="text-success">public</small>
          <% } else { %>
            <small class="text-danger">private</small>
          <% } %>
        </h1>
        <p class="lead">
          by <%= blog.author %>
        </p>
        <hr/>
        <div class="container">
          <% if (blog.more) { %>
            <%- blog.digest %>
          <% } else {  %>
            <%- blog.renderedContents %>
          <% } %>
        </div>
        <% if (blog.more) { %>
          <hr/>
          <a class="btn btn-primary" href="#">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>
        <% } %>
        <hr/>
      <% } %>
    <% }); %>

  </div>

</div>
